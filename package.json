{
	"name": "web-archive-api",
	"scripts": {
		"dev": "wrangler dev",
		"deploy": "wrangler deploy --minify",
		"db:generate": "drizzle-kit generate",
		"db:migrate-local": "pnpx wrangler d1 execute web-archive-db --local --file=./src/db/migrations/0001_uneven_gorgon.sql",
		"db:migrate-remote": "pnpx wrangler d1 execute web-archive-db --remote --file=./src/db/migrations/0001_uneven_gorgon.sql",
		"studio": "pnpm drizzle-kit studio --port 3000 --verbose",
		"cf-typegen": "wrangler types --env-interface CloudflareBindings"
	},
	"dependencies": {
		"@libsql/client": "^0.15.7",
		"drizzle-orm": "^0.44.0",
		"hono": "^4.7.10"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20250529.0",
		"dotenv": "^16.5.0",
		"drizzle-kit": "^0.31.1",
		"tsx": "^4.19.4",
		"wrangler": "^4.4.0"
	}
}
